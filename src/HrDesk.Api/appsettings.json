{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=hrdesk.db"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [
      "FromLogContext"
    ]
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:5173",
      "http://localhost:5000"
    ]
  },
  "Jwt": {
    "Issuer": "HrDesk",
    "Audience": "HrDesk.Api",
    "SecretKey": "STUB_SECRET_KEY_FOR_DEVELOPMENT_ONLY_REPLACE_IN_PRODUCTION_MIN_32_CHARS"
  },
  "FeatureFlags": {
    "EnableAiOrchestration": true,
    "EnablePeopleHumIntegration": true,
    "EnableAuditLogging": true
  },
  "PeopleHum": {
    "ApiBaseUrl": "https://peoplehum-stub.local",
    "ApiKey": "STUB_API_KEY_PHASE_2"
  }
}